<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StockSavvy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css">

    <script rel="stylesheet" src="./site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark border-bottom border-bottom-dark" style="background: #2d3748!important;" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home"><img src="./images/logo-no-background.png" style="width: 60px;"></img></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" style="color: azure; border-radius: 8px;" aria-current="page" href="/Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" style="color: azure; border-radius: 8px;" href="/Portfolio">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" style="color: azure; border-radius: 8px;" href="/Crypto">Crypto</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary" style="color: azure; border-radius: 8px;" href="/Stock">Stock</a>
                        </li>
                    </ul>
                    <span>
                        <form method="post" asp-page-handler="LogoutRequest" class="navbar-text">
                            <button class="btn btn-outline-danger" style="border-radius: 8px;" type="button">Logout</button>
                        </form>
                    </span>
                </div>
            </div>
        </nav>





    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="position: fixed; bottom: 0;">
        <div class="container">
            &copy; 2023 - StockSavvy
        </div>
    </footer>
    <script>

        const button = document.getElementById('profile-button')

        function hide() {
            if (button.style.display == "none") {
                button.style.display = "block";
            } else {
                button.style.display = "none";

            }
        }



    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>